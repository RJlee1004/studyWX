<view class="goods_detail">
  <view class="detail_swiper">
    <swiper
    autoplay
    circular
    indicator-dots
    >
      <swiper-item 
      wx:for="{{ goods_details.pics }}" 
      wx:key="pics_id"
      bindtap="handlePreviewImage"
      data-index="{{index}}"
      >
        <image mode="widthFix" src="{{ item.pics_mid }}"> </image>
      </swiper-item>
    </swiper>
  </view>
  <view class="good_price">￥{{goods_details.goods_price}}</view>
  <view class="goods_name_row">
    <view class="goods_name">{{goods_details.goods_name}}</view>
    <view class="goods_collect">
      <text class="iconfont icon-shoucang1"></text>
      <view class="collect_text">收藏</view>
    </view>
  </view>

  <view class="goods_info">
    <view class="goods_info_title">图文详情</view>
    <view class="goods_info_content">
      <!-- 富文本 -->
      <rich-text nodes="{{goods_details.goods_introduce}}"></rich-text>
    </view>
  </view>

  <view class="btm_tool">
    <view class="tool_item">
      <view class="iconfont icon-kefu"></view>
      <view>客服</view>
      <button open-type="contact"></button>
    </view>
    <view class="tool_item">
      <view class="iconfont icon-fenxiang"></view>
      <view>分享</view>
      <button open-type="share"></button>
    </view>
    <navigator url="/pages/cart/index" open-type="switchTab" class="tool_item">
      <view class="iconfont icon-gouwuche"></view>
      <view>购物车</view>
    </navigator>
    <view class="tool_item btn_cart" bindtap="handleCartAdd">
      加入购物车
    </view>
    <view class="tool_item btn_buy">
      立即购买
    </view>
  </view>
</view>
